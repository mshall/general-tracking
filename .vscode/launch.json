{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "dev:inspect"
            ],
            "stopOnEntry": false,
            "port": 9229,
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std"
        }
    ]
}
